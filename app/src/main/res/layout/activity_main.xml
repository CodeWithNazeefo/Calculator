<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.vimalcvs.switchdn.DayNightSwitch
        android:id="@+id/ui_mode_switch"
        android:layout_width="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/input_data"
        android:text=""
        android:textColor="@color/operation_btn_color"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:gravity="end|bottom"
        android:paddingEnd="20dp"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <TextView
        android:id="@+id/result_data"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end|bottom"
        android:maxLength="16"
        android:autoSizeMaxTextSize="40dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:padding="5dp">

        <Button
            android:id="@+id/btnAc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/operation_btn_color"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnMod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"

            android:backgroundTint="@color/operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text=" %"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btndivide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnBackSpace"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/arithmetic_operation_btn_color"
            android:drawableStart="@drawable/baseline_backspace_24"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:paddingStart="22dp"
            />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="7"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="8"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="9"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/arithmetic_operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="4"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="5"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="6"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/arithmetic_operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btnOne"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="1"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="2"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="3"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/arithmetic_operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="0"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="appendNumber"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnEqualTo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/arithmetic_operation_btn_color"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="operators"
            android:text="="
            android:textColor="@color/white"
            android:textSize="22sp" />

    </GridLayout>


</LinearLayout>